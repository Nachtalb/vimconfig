{
    "coc.preferences.formatOnType": true,
    "coc.preferences.formatOnSaveFiletypes": ["python"],
    "coc.preferences.willSaveHandlerTimeout": 2000,
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Path": "~/.vimrc/venv/bin/flake8",
    "python.formatting.provider": "black",
    "python.formatting.blackPath": "~/.vimrc/venv/bin/black",
    "python.formatting.autopep8Path": "~/.vimrc/venv/bin/autopep8",
    "python.formatting.yapfPath": "~/.vimrc/venv/bin/yapf",
    "python.formatting.yapfArgs": ["--style={ column_limit: 120 }"],
    "python.analysis.extraPaths": [
        "./parts/omelette"
    ],
    "python.linting.ignorePatterns": [
        ".vscode/*.py",
        "**/site-packages/**/*.py",
        "bin/*",
        "var/**/*"
    ],
    "files.exclude": {
        "**/*.h*": true,
        "**/*.py[co]": true,
        "**/*.so": true,
        "**/__pycache__": true,
        "**/node_modules": true,
        "**/bower_components": true,
        "**/chameleon-cache": true
    },
    "files.associations": {
        "*.zcml": "xml"
    },
    "cSpell.ignorePaths": [
        "**/package-lock.json",
        "**/node_modules/**",
        "**/vscode-extension/**",
        "**/.git/objects/**",
        ".vscode",
        "coc-settings.json"
    ],
    "cSpell.ignoreRegExpList": [
        "^(\" )?Plug '.*'",
        "from [\\w\\.]+ import [\\w]+",
        "import [\\w\\.]+( as \\w)?"
    ],
    "cSpell.userWords": [
      "Cybercrime",
      "Deserialization",
      "Nachtalb",
      "Pixiv",
      "TQDM",
      "asyncio",
      "bruteforce",
      "keylogger",
      "opencv",
      "ugoira",
      "usecase",
      "verca",
      "webp"
    ],
    "files.maxMemoryForLargeFilesMB": 12288,
    "clangd.path": "~/.config/coc/extensions/coc-clangd-data/install/13.0.0/clangd_13.0.0/bin/clangd"
}

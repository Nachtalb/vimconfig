{
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Path": "~/.config/omf/bin/flake8",
    "python.linting.flake8Args": ["--max-line-length=120"],
    "python.formatting.provider": "yapf",
    "python.formatting.yapfPath": "~/.config/omf/bin/yapf",
    "python.formatting.yapfArgs": ["--style={ column_limit: 120 }"],
    "python.analysis.extraPaths": [
        "./parts/omelette"
    ],
    "python.linting.ignorePatterns": [
        ".vscode/*.py",
        "**/site-packages/**/*.py",
        "bin/*",
        "var/**/*"
    ],
    "files.exclude": {
        "**/*.h*": true,
        "**/*.py[co]": true,
        "**/*.so": true,
        "**/__pycache__": true,
        "**/node_modules": true,
        "**/bower_components": true,
        "**/chameleon-cache": true
    },
    "files.associations": {
        "*.zcml": "xml"
    },
    "files.maxMemoryForLargeFilesMB": 12288
}
